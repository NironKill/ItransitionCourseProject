@using Microsoft.AspNetCore.Mvc.Localization
@using CustomForms.Models.Jira

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Ticket Page";
}

<body>
    <main class="container py-4 row justify-content-center">
        <div class="col-lg-10">
            <div class="table-responsive">
                <table id="ticketsTable" class="table table-striped ticket-table">
                    <thead>
                        <tr>
                            <th scope="col">№</th>
                            <th scope="col">@Localizer["Summary"]</th>
                            <th scope="col">@Localizer["Status"]</th>
                            <th scope="col">@Localizer["Priority"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr class="ticket-row" data-href="@ticket.Link">
                                <td class="ticket-number"></td>
                                <td class="ticket-summary">@ticket.Summary</td>
                                <td class="ticket-status">@ticket.Status</td>
                                <td class="ticket-priority">@ticket.Priority</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>

@section Scripts {
    <script src="~/js/table.js" asp-append-version="true"></script>
}