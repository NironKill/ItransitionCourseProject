@using Microsoft.AspNetCore.Mvc.Localization
@using Newtonsoft.Json

@inject IViewLocalizer Localizer

@model CustomForms.Models.Form.FormModel

@{
    ViewData["Title"] = "View Page";
}

<script>
    var model = function () {
        return @Html.Raw(JsonConvert.SerializeObject(Model));
    }();
</script>

<body>
    <main class="container py-4 position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <span class="form-control-plaintext fs-4" id="template-title">@Model.Title</span>
                        <span class="form-control-plaintext text-muted" id="template-description">@Model.Description</span>
                    </div>
                </div>

                <div id="questions-container" class="list-group"></div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-light border me-3" id="home-toggle"
                            data-bs-tooltip="tooltip" data-bs-placement="bottom" title="@Localizer["Back"]">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                        </svg>
                        <i class="bi bi-arrow-left"></i>
                    </button>
                </div>
            </div>
        </div>
    </main>
</body>

@section Scripts {
    <script src="~/js/views.js" asp-append-version="true"></script>
}